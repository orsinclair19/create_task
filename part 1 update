import numpy as np
import matplotlib.pyplot as plt
import pandas

dataSetX = []
dataSetY = []

def graphType():
    graph_type = input("What kind of graph would you like to make? ")
    if "scatter" in graph_type or "Scatter" in graph_type:
        plt.scatter(dataSetX, dataSetY)
        plt.show
    elif "line" in graph_type:
        plt.plot(dataSetX, dataSetY)
        plt.show
    elif "bar" in graph_type:
        plt.bar(dataSetX, dataSetY)
        plt.show

