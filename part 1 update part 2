    plt.show()

def yValues():
    while True:
        data_entry = raw_input("Enter a y value (press enter when complete): ")
        if data_entry == "":
            break
        else:
            dataSetY.append(data_entry)
            print(dataSetY)
    graphType()

def xValues():
    while True:
        data_entry = raw_input("Enter an x value (press enter when complete): ")
        if data_entry == "":
            break
        else:
            dataSetX.append(data_entry)
            print(dataSetX)
    yValues()
    
xValues()
